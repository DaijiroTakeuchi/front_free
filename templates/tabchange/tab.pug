extends ../_extends/layout
block head
	title= meta.top.title
	meta(name="description", content=meta.top.description)
	meta(property="og:description", content=meta.top.description)
	link(rel="canonical", href=meta.common.url + meta.top.canonical)
	meta(property="og:title", content=meta.top.og_title)
	meta(property="og:type", content=meta.top.og_type)
block contents
	section.media
		ul.mediaNav
			li.mediaNavItem.mediaNavItem-active(data-media=1)
				p 1番目
			li.mediaNavItem(data-media=2)
				p 2番目
			li.mediaNavItem(data-media=3)
				p 3番目
		div.mediaBody
			div.mediaBodyItem.mediaBodyItem-active(data-media=1)
				p 1番目本文
			div.mediaBodyItem(data-media=2)
				p 2番目本文
			div.mediaBodyItem(data-media=3)
				p 3番目本文
block scripts
	script(src="/libs/slick.mi n.js")
	script(src="/libs/top.js")
